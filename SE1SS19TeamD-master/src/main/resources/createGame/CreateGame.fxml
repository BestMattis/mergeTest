<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="261.0" prefWidth="438.0" stylesheets="@../screen.css"
            xmlns="http://javafx.com/javafx/8" fx:controller="createGame.CreateGameController">
    <children>
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0" styleClass="background1"
              stylesheets="@../screen.css" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label styleClass="labelCreateGame" stylesheets="@../screen.css" text="%createGame.title">
                    <font>
                        <Font size="35.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <VBox alignment="CENTER" layoutX="243.0" layoutY="100.0" prefHeight="200.0" prefWidth="100.0"
              styleClass="background2" stylesheets="@../screen.css" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Label prefWidth="200.0" styleClass="labelCreateGame" stylesheets="@../screen.css"
                               text="%createGame.name">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="nameField"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Label prefWidth="200.0" styleClass="labelCreateGame" stylesheets="@../screen.css"
                               text="%createGame.players">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="playerNumberField"/>
                    </children>
                </HBox>
                <VBox alignment="CENTER" prefWidth="100.0">
                    <children>
                        <Label fx:id="messageField" styleClass="messageField" stylesheets="@../screen.css"
                               textFill="RED"/>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                            <children>
                                <Button fx:id="cancelButton" alignment="CENTER" mnemonicParsing="false"
                                        stylesheets="@../screen.css" text="%createGame.cancel"/>
                                <Button fx:id="createButton" alignment="CENTER" mnemonicParsing="false"
                                        stylesheets="@../screen.css" text="%createGame.create"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
    <styleClass>
        <String fx:value="background2"/>
        <String fx:value="labelCreateGame"/>
    </styleClass>
</AnchorPane>
