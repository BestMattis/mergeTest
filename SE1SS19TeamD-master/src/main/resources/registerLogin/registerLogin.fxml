<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="basePane" styleClass="pane" stylesheets="@../screen.css"
            xmlns="http://javafx.com/javafx/8">
    <children>
        <HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" maxHeight="400.0" maxWidth="600.0" prefHeight="400.0" prefWidth="600.0"
                      spacing="50.0" style="-fx-border-color: white; -fx-border-radius: 5;">
                    <children>
                        <Label fx:id="topLabel" text="%regLog.TopLabel" textFill="WHITE">
                            <VBox.margin>
                                <Insets left="10.0" top="10.0"/>
                            </VBox.margin>
                        </Label>
                        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="50.0">
                            <children>
                                <HBox alignment="CENTER" prefWidth="600.0" spacing="150.0">
                                    <children>
                                        <Label fx:id="nameLabel" prefWidth="100.0" text="%regLog.NameLabel"
                                               textFill="WHITE"/>
                                        <TextField fx:id="nameTextfield"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" prefWidth="600.0" spacing="150.0">
                                    <children>
                                        <Label fx:id="pwLabel" prefWidth="100.0" text="%regLog.PwLabel"
                                               textFill="WHITE">
                                            <HBox.margin>
                                                <Insets/>
                                            </HBox.margin>
                                        </Label>
                                        <PasswordField fx:id="pwTextfield"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER">
                                    <children>
                                        <Label fx:id="msgLabel" alignment="CENTER" contentDisplay="CENTER"
                                               textAlignment="CENTER" textFill="WHITE"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <HBox alignment="CENTER" minHeight="50.0" spacing="186.0">
                            <children>
                                <Button fx:id="logButton" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false" prefWidth="68.0" text="Login"/>
                                <Button fx:id="regButton" alignment="CENTER" contentDisplay="CENTER"
                                        mnemonicParsing="false" prefWidth="88.0" text="Register"/>
                            </children>
                        </HBox>
                        <VBox prefHeight="200.0" prefWidth="100.0"/>
                    </children>
                    <padding>
                        <Insets bottom="30.0"/>
                    </padding>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
